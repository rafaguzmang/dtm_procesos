<template xml:space="preserve">
    <t t-name="dtm_procesos.corte_laser_template" owl="1">
        <div class="container mt-4 border p-4 rounded shadow-sm">
            <div class="container d-flex flex-row">
<!--                JFY-->
                <div class="card text-dark  mb-3" style="max-width: 18rem;">
                    <div class="card-header ">
                        <img src="dtm_procesos/static/src/img/jfy.png"
                            class="img-fluid" alt="jfy logo" />
                        <h4 class="border border-black rounded-3 mt-2 text-center">
                            <span><t t-esc="this.state.porcentaje_jfy"/>% del día</span>
                        </h4>
                        <h4 class="border border-black rounded-3 mt-2 text-center">
                            <span><t t-esc="this.state.tiempo_jfy"/> min</span>
                        </h4>
                        <h4 class="border border-black rounded-3 mt-2 text-center">
                            <span><t t-esc="this.state.no_jfy"/> archivos</span>
                        </h4>
                    </div>
                    <div id="table-container" class="card-body overflow-auto" style="width:100%; height:10rem;">
                        <table class="table align-middle table-sm">
                            <thead>
                                <tr>
                                    <th>Orden</th>
                                    <th>Nombre</th>
                                    <th>%</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="this.state.cortes" t-as="corte" t-key="corte.id">
                                    <t t-if="corte.cortadora == 'BFC6025'">
                                        <tr t-attf-class="#{corte.play ? 'highlight-row' : ''}"
                                            t-attf-style="background-color: #{corte.play?' #c3f7cfff' : ''}">
                                            <td><t t-esc="corte.orden_trabajo"/></td>
                                            <td><t t-esc="corte.archivo"/></td>
                                            <td><t t-esc="corte.porcentaje"/></td>
                                        </tr>
                                    </t>
                                </t>
                            </tbody>
                        </table>
                    </div>
                    </div>
<!--                MITSUBISHI-->
                <div class="card text-dark  mb-3" style="max-width: 18rem;">
                    <div class="card-header ">
                        <img src="dtm_procesos/static/src/img/mitsubishi.png"
                            class="img-fluid" alt="mitsubishi logo" />
                        <h4 class="border border-black rounded-3 mt-2 text-center">
                            <span><t t-esc="this.state.porcentaje_mitsubishi"/>% del día</span>
                        </h4>
                        <h4 class="border border-black rounded-3 mt-2 text-center">
                            <span><t t-esc="this.state.tiempo_mitsubishi"/> min</span>

                        </h4>
                        <h4 class="border border-black rounded-3 mt-2 text-center">
                            <span><t t-esc="this.state.no_mitsubishi"/> archivos</span>

                        </h4>
                    </div>
                    <div class="card-body overflow-auto" style="width:100%; height:20rem;">
                        <table class="table align-middle table-sm">
                            <thead>
                                <tr>
                                    <th>Orden</th>
                                    <th>Nombre</th>
                                    <th>%</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="this.state.cortes" t-as="corte" t-key="corte.id">
                                    <t t-if="corte.cortadora == 'MITSUBISHI'">
                                        <tr t-attf-style="background-color: #{corte.play?' #c3f7cfff' : ''}">
                                            <td><t t-esc="corte.orden_trabajo"/></td>
                                            <td><t t-esc="corte.archivo"/></td>
                                            <td><t t-esc="corte.porcentaje"/></td>
                                        </tr>
                                    </t>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>

        </div>
    </t>
    
</template>
