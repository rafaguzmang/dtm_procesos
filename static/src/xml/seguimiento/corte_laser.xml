<template xml:space="preserve">
    <t t-name="dtm_procesos.corte_laser_template" owl="1">
        <div class="container mt-4 border p-4 rounded shadow-sm">
            <div class="row">
                <h2>Corte Laser</h2>
            </div>
            <div class="row">
                <div class="container d-flex justify-content-center"
                     style="max-height:300px; overflow-y:auto;">
                    <table class="table table-sm table-hover mt-2 table-bordered">
                        <thead class = "table-primary">
                            <tr>
                                <th>Máquina</th>
                                <th>Orden</th>
                                <th>Nombre</th>
                                <th>Fecha</th>
                                <th>Cantidad</th>
                                <th>Contador</th>
                                <th>T.Estimado</th>
                                <th>Tiempo/min</th>
                                <th>Realizado</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="this.state.cortes" t-as="corte" t-key="corte.id">
                                <tr  t-attf-style="background-color: #{corte.porcentaje == 100 ?' #c3f7cfff' : ''}">
                                    <td style="text-align: center;width:15%">
                                        <t t-if="corte.play">
                                            <t t-if="corte.cortadora == 'MITSUBISHI'">
                                                <img src="dtm_procesos/static/src/img/mitsubishi.png" style="width:20%" alt="Máquina Mitsubishi"/>
                                            </t>
                                            <t t-if="corte.cortadora == 'BFC6025'">
                                                <img src="dtm_procesos/static/src/img/jfy.png" style="width:20%" alt="Máquina JFY"/>
                                            </t>
                                        </t>
                                    </td>
                                    <td><t t-esc="corte.orden_trabajo"/></td>
                                    <td><t t-esc="corte.archivo"/></td>
                                    <td><t t-esc="corte.fecha_corte"/></td>
                                    <td><t t-esc="corte.cantidad"/></td>
                                    <td><t t-esc="corte.contador"/></td>
                                    <td><t t-esc="corte.tiempo_teorico"/></td>
                                    <td><t t-esc="corte.tiempo_real"/></td>
                                    <td><t t-esc="corte.porcentaje"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <span class="fw-bold">Tiempos</span>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Estimado</th>
                                <th>Mitsubishi</th>
                                <th>%Día</th>
                                <th>Estimado</th>
                                <th>JFY</th>
                                <th>%Día</th>
                                <th>%Proyectado</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><t t-esc='this.state.tiempo_estimado_mitsubishi'/>min</td>
                                <td><t t-esc="this.state.tiempo_mitsubishi"/></td>
                                <td><t t-esc="this.state.porcentaje_mitsubishi"/></td>
                                <td><t t-esc="this.state.tiempo_estimado_jfy"/></td>
                                <td><t t-esc="this.state.tiempo_jfy"/></td>
                                <td><t t-esc="this.state.porcentaje_jfy"/></td>
                                <td><t t-esc='this.state.porcentaje_corte'/>%</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </t>
    
</template>
