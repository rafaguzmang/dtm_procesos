<template xml:space="preserve">
    <t t-name="dtm_procesos.importantes" owl="1">
      <div class="container col-8 mt-4 border p-4 rounded shadow-sm">
        <h2>Importantes Component</h2>        
            <table class="table table-sm table-hover mt-2 table-bordered">
                <thead class = "table-primary">
                    <tr>
                        <th>Orden</th>
                        <th>Cliente</th>
                        <th>Fecha</th>
                        <th>Nesteo</th>
                        <th>Material</th>
                        <th>Autorizar</th>
                        <th>Compras</th>
                        <th>Corte</th>
                        <th>Maquinado</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="this.state.importantes" t-as="orden" t-key="orden.orden">
                        <tr>
                            <td><t t-esc="orden.orden"/></td>
                            <td><t t-esc="orden.cliente"/></td>
                            <td><t t-esc="orden.fecha_entrega"/></td>
                            <td><t t-esc="orden.nesteo"/></td>
                            <td class="importantes_hover" t-on-click="() => this.abrirDialogoMateriales(orden.orden, orden.version_ot)">
                                <t t-esc="orden.compra_material"/>
                            </td>
                            <td><t t-esc="orden.requerido"/></td>
                            <td><t t-esc="orden.realizado"/></td>
                            <td class="importantes_hover" t-on-click="() => this.abrirDialogoCorte(orden.orden, orden.version_ot)">
                                <t t-esc="orden.corte"/>
                            </td>
                            <td class="importantes_hover" t-on-click="() => this.abrirDialogoMaquinados(orden.orden, orden.version_ot)">
                                <t t-esc="orden.maquinado"/>
                            </td>                            
                        </tr>
                        
                    </t>
                </tbody>
            </table>   
            <div>
                <t t-if="state.materiales_dialog">
                    <DialogMateriales cerrar="cerrarDialogoMateriales" orden="this.state.orden_actual" version="this.state.version_actual" />
                </t>
                <t t-if="state.corte_dialog">
                    <DialogCorteLaser cerrar="cerrarDialogoCorte" orden="this.state.orden_actual" version="this.state.version_actual" />
                </t>
                <t t-if="state.DialogMaquinados">
                    <DialogCorteLaser cerrar="cerrarDialogoMaquinados" orden="this.state.orden_actual" version="this.state.version_actual" />
                </t>
            </div>
        </div>
    </t>    
</template>